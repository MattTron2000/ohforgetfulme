<%= form_for(@remind) do |f| %>
  <% if @remind.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@remind.errors.count, "error") %> prohibited this remind from being saved:</h2>

      <ul>
      <% @remind.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    What would you like to remind yourself about? <br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    What date would you like the reminder on?<br>
    <%= f.date_select :date %>
<br><br>
    How would you like to be contacted?
    <table>
    <tr><td><%= f.check_box"contactemail"%></td><td><%= f.label :contactemail ,'Email Address' %></td>
    <td><%= f.text_field :email , :placeholder => "Ephiphany@OhForgetful.Me", :size => 25%></td></tr>
    
    <tr><td><%= f.check_box"contacttext"%></td><td><%= f.label :contacttext ,'Texting phone number' %></td>
    <td><%= f.text_field :textnumber, :size => 25%></td></tr>

    <tr><td><%= f.check_box"contactphone"%></td><td><%= f.label :contactphone ,'Phone number to call' %></td>
    <td><%= f.text_field :phonenumber , :size => 25%></td></tr>
  </table><br>
    <%= f.label "The message for future you:" %><br>
    <%= f.text_area :message %>
  </div>
  <div class="field">

  <div class="actions" align = "center">
    <br>
    <%= f.submit "   Set Reminder   ", :class=>"form-button"%>
  </div>
</div>
<% end %>
